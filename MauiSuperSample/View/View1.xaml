<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:MauiSuperSample.Viewmodel"
             x:DataType="viewmodel:View1ViewModel"
             x:Class="MauiSuperSample.View.View1"
             Title="View1">
    <VerticalStackLayout>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Entry Text="{Binding TaskStatusName}"></Entry>
        <Entry Text="{Binding SayMyName}" Placeholder="Say my name"></Entry>
        <Button Text="Navegar View 2"  Command="{Binding GoView2Command}"/>
    </VerticalStackLayout>
</ContentPage>